# Configurações da API
# ⚠️ IMPORTANTE: Altere estes valores em produção!
API_KEY=your_secure_admin_master_api_key_here_min_32_chars
BASE_WEBHOOK_URL=http://localhost:3000
MAX_ATTACHMENT_SIZE=10000000
SET_MESSAGES_AS_SEEN=false
DISABLED_CALLBACKS=
ENABLE_LOCAL_CALLBACK_EXAMPLE=false
ENABLE_SWAGGER_ENDPOINT=true
WEB_VERSION=2.2402.5
WEB_VERSION_CACHE_TYPE=none
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=1000
RECOVER_SESSIONS=true

# Configurações do PostgreSQL
# ⚠️ IMPORTANTE: Use senhas fortes em produção!
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=whatsapp_auth
POSTGRES_USER=whatsapp_user
POSTGRES_PASSWORD=your_secure_postgres_password_here_min_16_chars

# Configurações JWT
# ⚠️ CRÍTICO: Use um secret forte e único em produção!
JWT_SECRET=your_secure_jwt_secret_here_min_32_chars_use_random_generator
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Configurações de Autenticação
ENABLE_AUTH=true

# Configurações do Redis (se necessário)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here_min_16_chars



SESSIONS_PATH=./sessions

# ⚠️ INSTRUÇÕES DE SEGURANÇA:
# 1. Gere senhas fortes usando: openssl rand -base64 32
# 2. Nunca use valores padrão em produção
# 3. Use HTTPS em produção
# 4. Configure firewall adequadamente
# 5. Mantenha dependências atualizadas
# 6. Monitore logs regularmente 